{
  "version": "benchmark",
  "server": {
    "listen_address": "0.0.0.0",
    "listen_port": 8080,
    "backlog": 2048,
    "worker_threads": 4
  },
  "routes": [
    {
      "path": "/",
      "method": "GET",
      "handler_id": "root",
      "upstream": "mock_backend",
      "priority": 100
    },
    {
      "path": "/health",
      "method": "GET",
      "handler_id": "health",
      "upstream": "mock_backend",
      "priority": 90
    },
    {
      "path": "/api",
      "method": "GET",
      "handler_id": "api",
      "upstream": "mock_backend",
      "priority": 80
    },
    {
      "path": "/api/data",
      "method": "GET",
      "handler_id": "data",
      "upstream": "mock_backend",
      "priority": 70
    }
  ],
  "upstreams": [
    {
      "name": "mock_backend",
      "load_balancing": "round_robin",
      "backends": [
        {
          "host": "127.0.0.1",
          "port": 3001,
          "weight": 1,
          "max_connections": 1000
        }
      ]
    }
  ]
}
