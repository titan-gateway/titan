{
  "version": "1.0",
  "description": "Titan Benchmark - Compression Overhead Testing",

  "server": {
    "worker_threads": 4,
    "listen_address": "0.0.0.0",
    "listen_port": 8080,
    "backlog": 2048,
    "read_timeout": 60000,
    "write_timeout": 60000,
    "idle_timeout": 300000,
    "shutdown_timeout": 30000,
    "max_connections": 10000,
    "max_request_size": 1048576,
    "max_header_size": 8192
  },

  "upstreams": [
    {
      "name": "mock_backend",
      "load_balancing": "round_robin",
      "pool_size": 100,
      "pool_idle_timeout": 60,
      "backends": [
        {
          "host": "127.0.0.1",
          "port": 3001,
          "weight": 1,
          "max_connections": 1000
        }
      ]
    }
  ],

  "routes": [
    {
      "path": "/",
      "method": "GET",
      "handler_id": "root",
      "upstream": "mock_backend",
      "priority": 100
    },
    {
      "path": "/health",
      "method": "GET",
      "handler_id": "health",
      "upstream": "mock_backend",
      "priority": 90
    },
    {
      "path": "/api",
      "method": "GET",
      "handler_id": "api",
      "upstream": "mock_backend",
      "priority": 80
    },
    {
      "path": "/api/data",
      "method": "GET",
      "handler_id": "data",
      "upstream": "mock_backend",
      "priority": 70
    },
    {
      "path": "/large",
      "method": "GET",
      "handler_id": "large",
      "upstream": "mock_backend",
      "priority": 60
    }
  ],

  "compression": {
    "enabled": true,
    "algorithms": ["zstd", "gzip", "br"],
    "min_size": 1024,
    "streaming_threshold": 102400,
    "levels": {
      "gzip": 6,
      "zstd": 5,
      "brotli": 4
    },
    "content_types": [
      "text/html",
      "text/plain",
      "text/css",
      "text/xml",
      "application/json",
      "application/javascript",
      "application/xml",
      "image/svg+xml"
    ],
    "excluded_content_types": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "video/mp4",
      "application/zip",
      "application/gzip"
    ],
    "disable_for_paths": [],
    "disable_when_setting_cookies": true,
    "precompressed": {
      "enabled": false
    }
  },

  "cors": {
    "enabled": false
  },

  "rate_limit": {
    "enabled": false
  },

  "jwt": {
    "enabled": false
  },

  "logging": {
    "level": "error",
    "format": "json",
    "log_requests": false,
    "log_responses": false
  }
}
