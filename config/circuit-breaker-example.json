{
  "server": {
    "worker_threads": 4,
    "listen_address": "0.0.0.0",
    "listen_port": 8080
  },
  "upstreams": [
    {
      "name": "backend",
      "backends": [
        {
          "host": "localhost",
          "port": 3001,
          "weight": 1,
          "max_connections": 100
        }
      ],
      "load_balancing": "round_robin",
      "circuit_breaker": {
        "enabled": true,
        "failure_threshold": 5,
        "success_threshold": 2,
        "timeout_ms": 30000,
        "window_ms": 10000,
        "enable_global_hints": true,
        "catastrophic_threshold": 20
      }
    }
  ],
  "routes": [
    {
      "path": "/*",
      "upstream": "backend"
    }
  ],
  "cors": {
    "enabled": true,
    "allowed_origins": ["*"],
    "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
  },
  "rate_limit": {
    "enabled": false
  },
  "logging": {
    "level": "info",
    "format": "json",
    "log_requests": true
  },
  "metrics": {
    "enabled": true,
    "port": 9090,
    "path": "/metrics"
  }
}
